{
  // Ruta: MiniERP_Suministros\MiniERP_Suministros.client\.vscode\launch.json
  // Archivo de configuración de lanzamiento para Visual Studio Code.
  // Permite depurar la aplicación Angular MiniERP_Suministros.client en navegadores Chrome o Edge.
  // Incluye configuraciones para iniciar la app en https://localhost:4200 y mapear los archivos fuente.
  // 
  // SECCIONES PRINCIPALES =======================================================
  // - version: Versión del esquema de configuración de VS Code.
  // - configurations: Lista de configuraciones de depuración disponibles.
  // =============================================================================

  "version": "0.2.0",
  "configurations": [
    {
      // CONFIGURACIÓN PARA CHROME ===============================================
      // Permite iniciar y depurar la app en Google Chrome.
      // - type: Define el depurador como Chrome.
      // - request: Tipo de solicitud, "launch" inicia una nueva instancia.
      // - name: Nombre visible en el menú de depuración.
      // - url: Dirección local donde se ejecuta la app Angular.
      // - webRoot: Carpeta raíz para mapear archivos fuente.
      // ==========================================================================
      "type": "chrome",
      "request": "launch",
      "name": "localhost (Chrome)",
      "url": "https://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },
    {
      // CONFIGURACIÓN PARA EDGE =================================================
      // Permite iniciar y depurar la app en Microsoft Edge.
      // - type: Define el depurador como Edge.
      // - request: Tipo de solicitud, "launch" inicia una nueva instancia.
      // - name: Nombre visible en el menú de depuración.
      // - url: Dirección local donde se ejecuta la app Angular.
      // - webRoot: Carpeta raíz para mapear archivos fuente.
      // ==========================================================================
      "type": "edge",
      "request": "launch",
      "name": "localhost (Edge)",
      "url": "https://localhost:4200",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
