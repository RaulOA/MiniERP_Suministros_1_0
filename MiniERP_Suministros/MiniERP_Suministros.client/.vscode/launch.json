{
  // + RUTA: MiniERP_Suministros\MiniERP_Suministros.client\.vscode\launch.json
  // - Configuración de perfiles de depuración para lanzar la aplicación cliente en navegadores Chrome y Edge.
  "version": "0.2.0",
  "configurations": [
    {
      // + PERFIL DE DEPURACIÓN: Chrome
      // - Permite iniciar la aplicación en https://localhost:4200 usando Google Chrome.
      "type": "chrome", // Tipo de depurador: Chrome.
      "request": "launch", // Tipo de solicitud: lanzar una nueva instancia del navegador.
      "name": "localhost (Chrome)", // Nombre descriptivo del perfil.
      "url": "https://localhost:4200", // URL donde se ejecuta la aplicación Angular.
      "webRoot": "${workspaceFolder}" // Carpeta raíz del proyecto para mapear archivos fuente.
    },
    {
      // + PERFIL DE DEPURACIÓN: Edge
      // - Permite iniciar la aplicación en https://localhost:4200 usando Microsoft Edge.
      "type": "edge", // Tipo de depurador: Edge.
      "request": "launch", // Tipo de solicitud: lanzar una nueva instancia del navegador.
      "name": "localhost (Edge)", // Nombre descriptivo del perfil.
      "url": "https://localhost:4200", // URL donde se ejecuta la aplicación Angular.
      "webRoot": "${workspaceFolder}" // Carpeta raíz del proyecto para mapear archivos fuente.
    }
  ]
}
